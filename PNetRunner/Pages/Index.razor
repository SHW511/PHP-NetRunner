@inherits IndexComponent
@page "/"
@using PNetRunner.Ext

<PageTitle>Index</PageTitle>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Args</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proc in Processes)
        {
            <tr>
                <td>@proc.Item2.Id</td>
                <td>@proc.Item1</td>
                <td>
                    @{
                        var str = @proc.Item2.StartInfo.Arguments.AsHref(true, "-S", " ");
                        <a href="@str">@str</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>