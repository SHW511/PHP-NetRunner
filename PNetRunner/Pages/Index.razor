@inherits IndexComponent
@page "/"

<PageTitle>Index</PageTitle>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Args</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proc in PhpRunner.Processes)
        {
            <tr>
                <td>@proc.Id</td>
                <td>@proc.ProcessName</td>
                <td>
                    <a href="http://@(@proc.StartInfo.Arguments.Replace("-S ", string.Empty))">@proc.StartInfo.Arguments</a>
                </td>
            </tr>
        }
    </tbody>
</table>