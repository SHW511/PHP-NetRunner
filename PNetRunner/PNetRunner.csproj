<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="PHP__runtime\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="PHP_content\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="PHP_content\PhpMyAdmin\**" />
    <Content Remove="PHP_content\PhpMyAdmin\**" />
    <EmbeddedResource Remove="PHP_content\PhpMyAdmin\**" />
    <None Remove="PHP_content\PhpMyAdmin\**" />
  </ItemGroup>

</Project>
